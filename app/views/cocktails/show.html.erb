<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<%= image_tag "https://images.pexels.com/photos/298719/pexels-photo-298719.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940", alt: "Cocktail", width: 200 %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>



<%= link_to 'Add a new Dose', new_cocktail_dose_path(@cocktail),class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail), class: 'btn btn-primary' %> |
<%= link_to 'Back', cocktails_path, class: 'btn btn-primary' %>
