<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 101, 168, 0) 0%, rgba(0, 36, 61, 0.19) 50%), url('https://images.pexels.com/photos/1266020/pexels-photo-1266020.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="banner-content">
    <h1>All our cocktails</h1>
    <p>
     <h3>Try some cocktails</h3>
    </p>
    <%= link_to 'Create a new cocktail', new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>

<h1 id="h1cocktails">Cocktails</h1>

<div class="card-group">
  <% @cocktails.each do |cocktail| %>
  <div class="col-6 col-md-4">
    <img class="card-img-top" src="<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= cocktail.name %></h5>
      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      <td><%= link_to 'Show', cocktail, class: 'btn btn-secondary'%></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail), class: 'btn btn-secondary'%></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %></td>
    </div>
  </div>
  <% end %>
</div>


<br>



